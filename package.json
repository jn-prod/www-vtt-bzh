{
  "name": "www-vtt-bzh",
  "author": "Nicolas Jouanno",
  "license": "MIT",
  "version": "1.0.0",
  "engines": {
    "pnpm": ">= 8",
    "node": ">= 20"
  },
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jn-prod/www-vtt-bzh.git"
  },
  "bugs": {
    "url": "https://github.com/jn-prod/www-vtt-bzh/issues"
  },
  "homepage": "https://github.com/jn-prod/www-vtt-bzh#readme",
  "private": true,
  "scripts": {
    "postinstall": "pnpm manypkg check",
    "prepare": "husky install",
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "build:prod": "pnpm -r build && pnpm bundle-packages",
    "job": "pnpm --filter job start",
    "test": "pnpm -r test",
    "change": "changeset",
    "release": "changeset version",
    "release:status": "changeset status",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "bundle-packages": "rm -rf ./dist && cp -R ./site/www/_site/ ./dist"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.2",
    "@manypkg/cli": "^0.21.0",
    "@types/node": "^20.6.0",
    "eslint": "^8.49.0",
    "eslint-config-custom": "workspace:*",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prettier-custom": "workspace:*"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue}": "eslint --fix --ignore-path .gitignore",
    "*.{json,yaml,yml,md,mdx}": "prettier --write"
  }
}
