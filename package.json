{
  "name": "nj-websites",
  "author": "Nicolas Jouanno",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.7.18",
    "eslint": "8.41.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^2.5.1",
    "prettier-custom": "workspace:*",
    "turbo": "latest"
  },
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "npm run lint:es && npm run lint:prettier",
    "lint:fix": "npm run lint:es:fix && npm run lint:prettier:fix",
    "lint:es": "eslint **/*.{ts,js}",
    "lint:es:fix": "eslint **/*.{ts,js} --fix",
    "lint:prettier": "prettier --check **/*.{ts,js,json}",
    "lint:prettier:fix": "prettier --write **/*.{ts,js,json}"
  }
}
