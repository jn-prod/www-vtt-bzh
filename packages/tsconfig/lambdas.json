{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "es5",
        "outDir": ".build",
        "moduleResolution": "node",
        "lib": ["es2015"],
        "strict": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}